{
  "name": "nerdtail",
  "description": "nerdTail is a command line utility that grabs every line in stdin from a process, and broadcasts it over UDP.  Tail log files, app output, or whatever you wish. See multiple streams in the browser, in realtime.",
  "author": "spersico",
  "license": "MIT",
  "version": "0.0.8",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spersico/nerdTail.git"
  },
  "bugs": {
    "url": "https://github.com/spersico/nerdTail/issues"
  },
  "bin": {
    "nerdTailClient": "cli/nerdTailClient.js",
    "nerdTailListener": "cli/nerdTailListener.js"
  },
  "scripts": {
    "build": "tsc && vite build --outDir=cli/nerdTailSub-frontend",
    "build:watch": "tsc && vite build --outDir=cli/nerdTailSub-frontend --watch=true",
    "dev:client": "vite --port 9998",
    "dev:server": "DEBUG=nerdTail:* npx nodemon cli/nerdTailListener.js",
    "test-util:publisher": "node testUtils/chattyServer.js 2>&1 | DEBUG=nerdTail:* ./cli/nerdTailClient.js",
    "test-util:publisher:json": "node testUtils/chattyServer.js --contentType=json 2>&1 | DEBUG=nerdTail:* node ./cli/nerdTailClient.js --contentType=json"
  },
  "nodemonConfig": {
    "watch": [
      "./cli/**"
    ]
  },
  "dependencies": {
    "@solid-primitives/websocket": "^1.2.2",
    "debug": "^4.3.7",
    "dexie": "^3.2.7",
    "highlight.js": "^11.9.0",
    "json5": "2.2.3",
    "koa": "^2.14.2",
    "koa-static": "^5.0.0",
    "namor": "^3.0.1",
    "solid-dexie": "^0.0.5",
    "solid-js": "^1.8.5",
    "split": "^1.0.1",
    "ws": "^8.15.0",
    "yargs": "17.7.2"
  },
  "devDependencies": {
    "@types/node": "^22.8.2",
    "np": "^10.0.7",
    "sass": "^1.80.4",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vite-plugin-solid": "^2.10.2"
  }
}
